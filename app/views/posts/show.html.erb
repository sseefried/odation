<h1><%= @post.title %></h1>  

<%= social_helpers(@post.id, @post.title, @post.body) %>
<br/>
<% :notice %>

<%= raw RedCloth.new(@post.body).to_html %> 
<a href="http://twitter.com/share?text=Some_Quote" >Tweet</a>

<% if(current_user) %>
  <%=  link_to 'Edit', edit_post_path(@post) %>
  <%= link_to 'Back', posts_path %>
<% end %>

<h2>Comments</h2>

<div id="fb-root"></div><fb:comments href="http://odation.com/posts/<%= @post.id %>" num_posts="4" width="640"></fb:comments>


